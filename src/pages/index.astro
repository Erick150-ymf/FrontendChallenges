---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Article from "../components/Article.astro";
---

<Layout title="Frontend Mentor by Erick">
  <main>
    <Header
      title="My challenges"
      class="fixed w-full text-center grid place-items-center h-20 text-white text-3xl"
    />
    <section>
      <h2 class="text-2xl">All challenges</h2>
      <Article
        class="subSection grid gap-6 text-center auto-rows-auto grid-cols-[repeat(2_minmax(100px,_1fr))] md:grid-cols-[repeat(auto-fill_minmax(270px,_1fr))]"
      />
    </section>
    <br /><br /><br /><br /><br />
  </main>
</Layout>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
</style>
